            <Label layoutX="291.0" layoutY="63.0" text="Marca" />
            <Label layoutX="24.0" layoutY="63.0" text="Categoria" />
            <TextField fx:id="brandField" layoutX="336.0" layoutY="61.0" prefHeight="25.0" prefWidth="132.0" />
