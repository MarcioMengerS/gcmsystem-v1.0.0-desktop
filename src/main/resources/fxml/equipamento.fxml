                  <Font name="System Bold" size="21.0" />
               </font>
            </Label>
            <Label layoutX="229.0" layoutY="108.0" text="Nº Série/Prefixo" />
            <Label layoutX="483.0" layoutY="106.0" text="Placa" />
            <ComboBox fx:id="categoryComboBox" layoutX="86.0" layoutY="58.0" prefHeight="25.0" prefWidth="191.0" promptText="Tipo" />
